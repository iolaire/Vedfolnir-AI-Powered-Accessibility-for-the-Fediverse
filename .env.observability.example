# Observability Stack Configuration
# Copy this file to .env.observability and configure the values

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=secure_admin_password_here
GRAFANA_SECRET_KEY=generate_secure_secret_key_here

# MySQL Exporter Configuration
MYSQL_EXPORTER_PASSWORD=exporter_password_here

# Redis Configuration (should match main Redis password)
REDIS_PASSWORD=redis_password_here

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=200h
PROMETHEUS_STORAGE_PATH=/prometheus

# Loki Configuration
LOKI_RETENTION_PERIOD=168h

# Alert Manager Configuration (if using external AlertManager)
ALERTMANAGER_URL=http://alertmanager:9093

# Monitoring Network Configuration
MONITORING_SUBNET=172.21.0.0/16

# Resource Limits
PROMETHEUS_MEMORY_LIMIT=2G
GRAFANA_MEMORY_LIMIT=1G
LOKI_MEMORY_LIMIT=1G

# Security Configuration
MONITORING_ENABLE_BASIC_AUTH=false
MONITORING_BASIC_AUTH_USER=monitor
MONITORING_BASIC_AUTH_PASSWORD=monitor_password_here