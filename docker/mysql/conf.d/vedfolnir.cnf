# MySQL configuration for Vedfolnir Docker deployment
# This replaces any SQLite-based database configurations

[mysqld]
# Character set configuration for full Unicode support
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# InnoDB Configuration (optimized for containerized deployment)
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M
innodb_log_buffer_size = 32M
innodb_flush_log_at_trx_commit = 2
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT

# Connection settings
max_connections = 200
max_connect_errors = 1000
connect_timeout = 60
wait_timeout = 28800
interactive_timeout = 28800

# Query optimization
query_cache_size = 0
query_cache_type = 0

# Logging configuration
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# Binary logging for replication (optional)
log-bin = mysql-bin
binlog_format = ROW
expire_logs_days = 7
max_binlog_size = 100M

# Security settings
local_infile = 0
skip-name-resolve = 1

# Performance tuning for Docker environment
table_open_cache = 2000
table_definition_cache = 1400
thread_cache_size = 8
tmp_table_size = 64M
max_heap_table_size = 64M

# MyISAM settings (if needed)
key_buffer_size = 32M

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
