# RQ Development Environment Configuration

# Worker Configuration
WORKER_MODE=integrated
RQ_WORKER_COUNT=2
RQ_WORKER_TIMEOUT=300
RQ_WORKER_MEMORY_LIMIT=256
RQ_ENABLE_INTEGRATED_WORKERS=true
RQ_ENABLE_EXTERNAL_WORKERS=false
RQ_STARTUP_DELAY=2

# Queue Configuration
RQ_DEFAULT_TIMEOUT=300
RQ_RESULT_TTL=3600
RQ_JOB_TTL=1800
RQ_HEALTH_CHECK_INTERVAL=30

# Redis Configuration
REDIS_MEMORY_THRESHOLD=0.7
RQ_FAILURE_THRESHOLD=5

# Worker Scaling (Development)
RQ_MIN_URGENT_WORKERS=1
RQ_MAX_URGENT_WORKERS=2
RQ_MIN_HIGH_WORKERS=1
RQ_MAX_HIGH_WORKERS=2
RQ_MIN_NORMAL_WORKERS=1
RQ_MAX_NORMAL_WORKERS=2
RQ_MIN_LOW_WORKERS=1
RQ_MAX_LOW_WORKERS=1

# Logging Configuration
RQ_LOG_LEVEL=DEBUG
RQ_LOG_FILE=logs/rq_workers_dev.log
RQ_LOG_MAX_SIZE=5242880
RQ_LOG_BACKUP_COUNT=3
RQ_ENABLE_SYSLOG=false
RQ_ENABLE_JSON_LOGGING=false

# Monitoring Configuration
RQ_ENABLE_METRICS=true
RQ_METRICS_PORT=9091
RQ_ENABLE_HEALTH_CHECKS=true
RQ_HEALTH_CHECK_PORT=8081
RQ_ENABLE_ALERTING=false

# Scaling Configuration
RQ_ENABLE_AUTO_SCALING=false
RQ_SCALING_THRESHOLD_UP=0.9
RQ_SCALING_THRESHOLD_DOWN=0.2
RQ_SCALING_COOLDOWN=180

# Alert Thresholds (Development - More Lenient)
RQ_ALERT_MEMORY_USAGE_PERCENT_THRESHOLD=90.0
RQ_ALERT_CPU_USAGE_PERCENT_THRESHOLD=85.0
RQ_ALERT_QUEUE_BACKLOG_SIZE_THRESHOLD=100
RQ_ALERT_WORKER_FAILURE_RATE_THRESHOLD=0.2

# Gunicorn Configuration
GUNICORN_WORKERS=2
GUNICORN_BIND=127.0.0.1:5000
GUNICORN_TIMEOUT=60
GUNICORN_ACCESS_LOG=-
GUNICORN_ERROR_LOG=-